<h1>Consulta: Hinchas por Partido</h1>

<form action="/hincha/buscar" method="POST">
  <label for="id_partido">ID del Partido:</label>
  <input type="number" id="id_partido" name="id_partido" placeholder="Ingrese ID del partido" required />
  <button type="submit">Consultar</button>
</form>

{{#if mensaje}}
<p>{{mensaje}}</p>
{{/if}}

<h1>Agregar hincha</h1>
<form action="/hincha/agregar" method="POST">
  <label for="id_equipo">ID del Equipo del hincha:</label>
  <input type="number" id="id_equipo" name="id_equipo" required>
  <br>
  <label for="rut_fan">Rut del fan:</label>
  <input type="text" id="rut_fan" name="rut_fan" required>
  <br>
  <button type="submit">Agregar Hincha</button>
</form>

{{#if mensaje}}
<p><strong>{{mensaje}}</strong></p>
{{/if}}

{{#if error}}
<p><strong>{{error}}</strong></p>
{{/if}}

<h1>Eliminar Hincha</h1>
<form action="/hincha/eliminar" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar este hincha?');">
  <label for="id_equipo">ID del Equipo:</label>
  <input type="text" id="id_equipo" name="id_equipo" required placeholder="Ingrese el ID del equipo del hincha a eliminar">
  
  <label for="rut_fan">RUT del Fan:</label>
  <input type="text" id="rut_fan" name="rut_fan" required placeholder="Ingrese el RUT del fan del hincha a eliminar">
  
  <button type="submit">Eliminar Hincha</button>
</form>
